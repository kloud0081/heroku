{{#each product}}
<div class="row">
    {{#each this}}
        <div class="col-sm-4">
      <div class="card">
    <div class="text-center">
  <img src={{this.imagepath}} class="card-img-top" alt="...">
</div>
  <div class="card-body">
    <h5 class="card-title">{{this.productname}}</h5>
    <p class="card-text">
        storage opacity :{{this.information.torageOpaciity}}</br>
            number Of Sim :{{this.information.numberOfSim}}</br>
        camera Resolution :{{this.information.cameraResolution}}</br>
        display size :{{this.information.displaysize}}</br>

    </p>
    <div class="buttonundprice">
        <div class="price ">${{this.price}}</div>
{{#if ../../check}}

    <a href="/addtocart/{{this._id}}/{{this.price}}/{{this.productname}}" class="btn btn-success ">Buy</a>
    {{else}}

<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
Buy</button>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        You Must Login To Buy Products
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
       <a href="users/login"> <button type="button" class="btn btn-primary">Login</button></a>
      </div>
    </div>
  </div>
</div>
{{/if}}
    </div>
  </div>
</div>
    </div>
    {{/each}}
</div>
{{/each}}
